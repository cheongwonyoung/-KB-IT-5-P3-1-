<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kb.crunchit.mapper.UserMapper">

    <select id="findByEmail" resultType="com.kb.crunchit.dto.response.UserDto" parameterType="string">
        select *
        from user
        where email = #{email};
    </select>

    <select id="findByNickname" resultType="com.kb.crunchit.dto.response.UserDto" parameterType="string">
        select *
        from user
        where nickname = #{nickname};
    </select>

    <insert id="insertUser" parameterType="com.kb.crunchit.dto.response.UserDto">
        insert into user (nickname, password, phone_number, email)
        values (#{nickname}, #{password}, #{phone_number}, #{email})
    </insert>

</mapper>
